<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/back_star" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="250dp"
                android:text="별자리 설화"
                android:fontFamily="@font/main_font_regular"
                android:textSize="25sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_bottle_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_fish_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_sheep_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_ox_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_twin_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_crab_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_lion_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_woman_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_balance_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_scorpion_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/star_centaur_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

                <ImageButton
                    android:id="@+id/star_goat_btn"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/star_rect"
                    android:src="@drawable/star_lion"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>